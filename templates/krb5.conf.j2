[logging]
 default = FILE:/var/log/krb5libs.log
 kdc = FILE:/var/log/krb5kdc.log
 admin_server = FILE:/var/log/kadmind.log

[libdefaults]
 default_realm = {{ kerberos_server_realm_name|upper() }}
 dns_lookup_realm = false
 dns_lookup_kdc = false
 ticket_lifetime = {{Â kerberos_server_ticket_lifetime }}
 renew_lifetime = {{ kerberos_server_renew_lifetime }}
 forwardable = true

[realms]
 {{ kerberos_server_realm_name| upper() }} = {
{% for host in kerberos_server_kdcs %}
  kdc = {{ host }}
{% endfor %}
  admin_server = {{ kerberos_server_kadmin_host }}
 }

[domain_realm]
 .{{ kerberos_server_domain }} = {{ kerberos_server_realm_name|upper() }}
  {{ kerberos_server_domain }} = {{ kerberos_server_realm_name|upper() }}
